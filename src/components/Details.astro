<script>
  import gsap from 'gsap';
  import ScrollTrigger from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const detailsTl = gsap.timeline({
    scrollTrigger: {
      trigger: '.inspection',
      start: 'top center',
      end: 'bottom center',
      scrub: true,
    },
  });

  detailsTl
    .to('.inspection h2', {
      y: -100,
    })
    .to(
      '.ring-bg',
      {
        y: -50,
        height: 300,
      },
      '<'
    );

  gsap.to('.marquee h3', {
    scrollTrigger: {
      trigger: '.marquee h3',
      start: 'top 80%',
      end: 'bottom top',
      scrub: true,
    },
    x: 200,
  });
</script>

<section class='details'>
  <div class='inspection layout-ws'>
    <h2>68</h2>
    <div class='ring-bg'>
      <p>Point Inspection</p>
    </div>
    <p>
      Our 68-point inspection at Ringston meticulously examines every
      aspect of the jewelry, from clasp strength to gemstone clarity,
      guaranteeing unparalleled quality in every piece.
    </p>
  </div>
  <div class='mask marquee'>
    <h3>precision</h3>
  </div>
</section>

<style>
  section {
    height: 100vh;
  }

  .details {
    margin-bottom: 0;
  }

  .inspection {
    text-align: center;
    margin-top: 10em;

    h2 {
      font-size: clamp(5rem, 6vw, 8rem);
      margin: 0;
    }

